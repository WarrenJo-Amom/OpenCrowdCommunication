<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerVertical="false"
    tools:context=".activity.IntroActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/imageView2"
        android:background="#209398">

    </View>

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_margin="16dp"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/iseoulu" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        app:srcCompat="@drawable/maxresdefault" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView2"
        android:background="#2f809d">

    </View>

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView2"
        android:layout_centerInParent="false"
        android:adjustViewBounds="true"
        android:visibility="gone"
        app:srcCompat="@drawable/seoul20_map" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView4"
        android:layout_below="@+id/imageView2"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:srcCompat="@drawable/iseoulu" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:text="이 애플리케이션은 서울시 리빙랩 지원사업의 일환으로\n프로토타입의 형태로 제작되었습니다."
        android:textColor="@color/white"
        android:textSize="12dp" />

</RelativeLayout>

